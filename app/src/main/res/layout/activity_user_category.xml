<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Product Categories"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category_user"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/t_shirts_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/sports_t_shirts_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            />

        <ImageView
            android:id="@+id/female_dresses_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/sweathers_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout_user"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="3dp"
        >

        <ImageView
            android:id="@+id/glasses_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/purses_bags_wallets_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            />

        <ImageView
            android:id="@+id/hats_caps_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/shoes_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            android:layout_marginStart="1dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout_user"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="3dp"
        >

        <ImageView
            android:id="@+id/headphones_handfree_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/laptop_pc_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            />

        <ImageView
            android:id="@+id/watches_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/images"
            />

        <ImageView
            android:id="@+id/mobilephones_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sports"
            android:layout_marginStart="1dp"
            />

    </LinearLayout>

</RelativeLayout>